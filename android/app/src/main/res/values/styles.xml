<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:datePickerDialogTheme">@style/Dialog.Theme</item>
        <item name="android:statusBarColor">@color/primary_text</item>
    </style>

    <style name="ClockTimePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/primary_orange</item>
        <item name="colorControlNormal">@color/primary_text</item>
    </style>

    <style name="SpinnerTimePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/primary_orange</item>
        <item name="colorControlNormal">@color/primary_text</item>
    </style>

    <style name="DefaultExplainingPermissionsTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/primary_orange</item>

        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/primary_text</item>

        <!-- Used for the background -->
        <item name="android:background">@color/white</item>
    </style>

    <style name="Dialog.Theme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/primary_orange</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
    </style>

</resources>
